{
  "name": "anima-e",
  "version": "1.0.0",
  "description": "Desktop animation widget with intelligent hide feature",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-packager . \"Anima E\" --platform=win32 --arch=x64 --out=dist --overwrite"
  },
  "keywords": [
    "desktop",
    "animation",
    "widget",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.2.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "png-to-ico": "^3.0.1"
  },
  "build": {
    "appId": "com.anima-e.desktop",
    "productName": "Anima E",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.js",
      "index.html",
      "settings.html",
      "*.gif",
      "logo.png",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "logo.png",
      "sign": null,
      "signingHashAlgorithms": null
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.entertainment"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "forceCodeSigning": false
  },
  "dependencies": {
    "auto-launch": "^5.0.6"
  }
}
