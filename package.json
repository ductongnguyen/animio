{
  "name": "anima-e",
  "version": "1.0.0",
  "description": "Desktop animation widget with intelligent hide feature",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "desktop",
    "animation",
    "widget",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.anima-e.desktop",
    "productName": "Anima E",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.js",
      "index.html",
      "settings.html",
      "*.gif",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "e9 dance.gif"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.entertainment"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
